@model CorrectBonus.Models.Auth.ForgotPasswordVm
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer L

@section Styles {
    <link rel="stylesheet"
          href="~/css/pages/auth.css"
          asp-append-version="true" />
}
<form asp-action="ForgotPassword"
      asp-controller="Auth"
      method="post"
      class="forgot-form"
      id="forgotPasswordForm">

    @Html.AntiForgeryToken()

    <h3 class="forgot-title">@L["ForgotPassword"]</h3>

    <div class="form-group">
        <label class="form-label">@L["Email"]</label>
        <input asp-for="Email"
               class="form-control"
               autocomplete="email"
               required />
    </div>

    <div class="forgot-actions">
        <button type="submit" class="btn btn-primary">
            @L["Send"]
        </button>

        <button type="button"
                class="btn btn-ghost"
                onclick="closeForgotModal()">
            @L["BackToLogin"]
        </button>
    </div>
</form>
