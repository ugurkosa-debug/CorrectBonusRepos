@using Microsoft.AspNetCore.Mvc.Localization
@model CorrectBonus.Models.Auth.ResetPasswordVm
@inject IViewLocalizer T

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = T["ResetPasswordTitle"];
}

@section Styles {
    <link rel="stylesheet"
          href="~/css/auth-pages.css"
          asp-append-version="true" />
}

<div class="auth-card">

    <h2 class="auth-title">@T["ResetPasswordTitle"]</h2>

    <p class="auth-subtitle">
        @T["ResetPasswordDescription"]
    </p>

    <form asp-action="ResetPassword"
          asp-controller="Auth"
          method="post"
          novalidate>

        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Token" />

        <div asp-validation-summary="ModelOnly"
             class="validation-summary">
        </div>

        <div class="form-group">
            <label>@T["Password"]</label>
            <input asp-for="Password"
                   class="form-input"
                   type="password" />
            <span asp-validation-for="Password"
                  class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>@T["ConfirmPassword"]</label>
            <input asp-for="ConfirmPassword"
                   class="form-input"
                   type="password" />
            <span asp-validation-for="ConfirmPassword"
                  class="text-danger"></span>
        </div>

        <button type="submit" class="btn-primary">
            @T["SaveNewPassword"]
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
