@model CorrectBonus.Models.UserManagement.UserEditVm

@using CorrectBonus.Entities.Authorization
@using Microsoft.AspNetCore.Mvc.Localization
@inject CorrectBonus.Services.Auth.IPermissionService Permission
@inject IViewLocalizer L

@{
    ViewData["Title"] = L["User.EditTitle"];

    // CS1501 düzeltildi: Has metodu yalnızca bir parametre alıyor.
    var canEdit = Permission.Has("USER");
}

@section Styles {
    <link rel="stylesheet"
          href="~/css/pages/user-edit.css"
          asp-append-version="true" />
}

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <!-- PAGE HEADER -->
    <div class="page-header">
        <h3 class="page-title">
            @L["User.EditTitle"]
        </h3>
    </div>

    <div class="form-card">

        <div class="form-grid">

            <!-- FULL NAME -->
            <div class="form-group">
                <label asp-for="FullName">
                    @L["User.FullName"]
                </label>

                <input asp-for="FullName"
                       class="form-control" />

                <span asp-validation-for="FullName"
                      class="text-danger"></span>
            </div>

            <!-- EMAIL (READONLY) -->
            <div class="form-group readonly">
                <label asp-for="Email">
                    @L["User.Email"]
                </label>

                <input asp-for="Email"
                       class="form-control"
                       readonly />
            </div>

            <!-- ROLE -->
            <div class="form-group">
                <label asp-for="RoleId">
                    @L["User.Role"]
                </label>

                <select asp-for="RoleId"
                        asp-items="Model.Roles"
                        class="form-select">
                    <option value="">
                        @L["Common.Select"]
                    </option>
                </select>

                <span asp-validation-for="RoleId"
                      class="text-danger"></span>
            </div>

            <!-- STATUS -->
            <div class="form-group form-status">
                <label>&nbsp;</label>

                <div class="form-check">
                    <input asp-for="IsActive"
                           class="form-check-input" />

                    <label asp-for="IsActive"
                           class="form-check-label">
                        @L["Common.Active"]
                    </label>
                </div>
            </div>

        </div>

        <!-- ACTIONS -->
        <div class="form-actions">

            @if (canEdit)
            {
                <button type="submit"
                        class="btn btn-primary">
                    @L["Common.Save"]
                </button>
            }

            <a asp-action="Index"
               class="btn btn-secondary">
                @L["Common.Cancel"]
            </a>

        </div>

    </div>
</form>
