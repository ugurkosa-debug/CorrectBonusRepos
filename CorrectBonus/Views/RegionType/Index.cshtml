@model List<CorrectBonus.Entities.Regions.RegionType>
@using CorrectBonus.Authorization
@using CorrectBonus.Entities.Authorization
@using Microsoft.AspNetCore.Mvc.Localization
@inject CorrectBonus.Services.Auth.IPermissionService Permission
@inject IViewLocalizer L
@inject CorrectBonus.Services.Localization.ICommonLocalizer Common

@{
    ViewData["Title"] = L["RegionType.Title"];
}
@{
    var canCreate = Permission.Has(PermissionRegistry.RegionTypes.Create);
    var canEdit = Permission.Has(PermissionRegistry.RegionTypes.Edit);
}
@section Styles {
    <link rel="stylesheet"
          href="~/css/pages/regiontype.css"
          asp-append-version="true" />
}

<!-- PAGE HEADER -->
<div class="page-header d-flex justify-between align-center">
    <h3>@L["RegionType.Title"]</h3>

    <!-- CREATE -->
    @if (canCreate)
    {
        <a asp-action="Create"
           class="btn btn-primary btn-sm">
            + @L["RegionType.Create"]
        </a>
    }
</div>

<!-- TABLE -->
<div class="table-wrapper">
    <table class="table-custom">
        <thead>
            <tr>
                <th>@L["RegionType.Name"]</th>
                <th>@L["RegionType.MaxLevel"]</th>
                <th>@Common["Status"]</th>
                <th class="col-actions">@Common["Actions"]</th>
            </tr>
        </thead>

        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="empty-row">
                        @Common["NoRecord"]
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>

                        <td>
                            @(item.MaxLevel == 0
                                                ? L["Common.Unlimited"]
                                                : item.MaxLevel.ToString())
                        </td>

                        <td>
                            <span class="status-badge @(item.IsActive ? "status-active" : "status-passive")">
                                @(item.IsActive
                                                        ? L["Common.Active"]
                                                        : L["Common.Passive"])
                            </span>
                        </td>

                        <td class="col-actions">
                            @if (canEdit)
                            {
                                <a asp-action="Edit"
                                   asp-route-id="@item.Id"
                                   class="btn btn-secondary btn-sm">
                                    @Common["Edit"]
                                </a>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

