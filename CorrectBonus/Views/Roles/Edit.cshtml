@model CorrectBonus.Models.RoleManagement.RoleEditViewModel

@{
    ViewData["Title"] = "Role Edit";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RoleId" />

    <div class="form-group">
        <label>Role Name</label>
        <input asp-for="RoleName" class="form-control" />
    </div>

    <div class="form-group">
        <label>
            <input asp-for="IsActive" /> Active
        </label>
    </div>

    <hr />

    @foreach (var module in Model.AllPermissions.GroupBy(x => x.Module))
    {
        <div class="permission-module">
            <h4>@module.Key</h4>


            @foreach (var perm in Model.AllPermissions)
            {
                <div class="form-check">
                    <input type="checkbox"
                           class="form-check-input"
                           name="SelectedPermissionIds"
                           value="@perm.PermissionId"
                           @(Model.SelectedPermissionIds.Contains(perm.PermissionId) ? "checked" : "") />

                    <label class="form-check-label">
                        @perm.Module - @perm.Name
                    </label>
                </div>
            }

                    </div>
                    <hr />
                }

    <div class="action-buttons">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
